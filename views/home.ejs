<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') -%>
  </head>
  <body>
    <div class="container-fluid">
      <header><%- include('./partials/header') -%></header>

      <main class="main text-center">
        <h1>FootyStore Inventory</h1>
        <p class="pb-3">Manage the store inventory with just a few clicks!</p>

        <% if(error) { %>
        <p>Error getting data from the server.</p>
        <% } else { %>
        <h2 class="pb-4">Leagues</h2>

        <div class="row dist">
          <% data.leagues.forEach((league, i) => { %>
          <!-- prettier-ignore -->
          <% if(i > 4) return %>

          <div class="col-sm w-25">
            <div class="h-50">
              <img
                src="/uploads/<%=league.fileName%>"
                alt="<%= league.name %> logo"
                class="logos"
              />

              <label class="fw-bold pt-3"><%=league.name%></label>
            </div>
          </div>
          <% }) %>
        </div>
        <a href="/store/leagues" class="btn btn-primary my-5"
          >See All Leagues</a
        >

        <h2 class="pb-4">Teams</h2>

        <div class="row dist">
          <% data.teams.forEach((team, i) => { %>
          <!-- prettier-ignore -->
          <% if(i > 4) return %>

          <div class="col-sm w-25">
            <div class="h-50">
              <img
                src="/uploads/<%=team.fileName%>"
                alt="<%= team.name %> logo"
                class="logos"
              />
              <label class="fw-bold pt-3"><%=team.name%></label>
            </div>
          </div>
          <% }) %>
        </div>
        <a href="/store/teams" class="btn btn-primary my-5">See All Teams</a>

        <h2 class="pb-4">Kits</h2>

        <div class="row">
          <% data.kits.forEach((kit, i) => { %>
          <!-- prettier-ignore -->
          <% if(i > 4) return %>

          <div class="col-sm w-25">
            <div class="h-50">
              <img
                src="/uploads/<%=kit.fileName%>"
                alt="<%= kit.name %> logo"
                class="logos"
              />

              <label class="fw-bold"><%=kit.name%></label>
            </div>
          </div>
          <% }) %>
        </div>
        <a href="/store/kits" class="btn btn-primary">See All Kits</a>
        <% } %>
      </main>

      <footer><%- include('./partials/footer') -%></footer>
    </div>
  </body>
</html>
